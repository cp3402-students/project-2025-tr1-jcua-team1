# Ignore WordPress core files
wp-admin/
wp-includes/
*.log
*.sql
*.sqlite
*.bak

# Ignore configuration files (if not using environment-based setup)
wp-config.php
wp-config-*.php

# Ignore uploaded media files (optional, unless you want to track uploads)
wp-content/uploads/

